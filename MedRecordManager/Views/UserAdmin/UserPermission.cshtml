@using Microsoft.AspNetCore.Identity
@inject UserManager<MedRecordManager.Models.UserRecord.ApplicationUser> UserManager

@model MedRecordManager.Models.UserRecord.UserVm
@{
    ViewData["Title"] = "User Permission View";
}

@{
    var tabId = "detail" + Model.UserId;
    var user = await UserManager.FindByIdAsync(Model.UserId);
    var isUserSuperAdmin = await UserManager.IsInRoleAsync(user, "SuperAdmin");
    var isUserCompanyAdmin = await UserManager.IsInRoleAsync(user, "CompanyAdmin");
    var isUserOfficeAdmin = await UserManager.IsInRoleAsync(user, "OfficeAdmin");
    var isUserClinicAdmin = await UserManager.IsInRoleAsync(user, "ClinicAdmin");
    var isUserApp = await UserManager.IsInRoleAsync(user, "AppUser");

}

<div class="tab-pane" id="@tabId">
    <div class="row">
        <div class="col-md-12">
            <div id="Results">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">User: @Model.Email</h3>
                    </div>
                    <div class="box-body">
                            <input asp-for="UserId" id="updUid" hidden>
                            <div class="row" id="userNames">
                                
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label">First Name</label>
                                        <input asp-for="FirstName" class="form-control" id="updFirstName"/>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label">Last Name</label>
                                        <input asp-for="LastName" class="form-control" id="updLastName"/>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned Roles</label>
                                            <select class="form-control fromList" asp-for="@Model.Role" asp-items="@Model.AvaliableRoles" id="availableRoles" name="availableRoles" multiple></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <div class="control-group">
                                                <div style="margin-top: 24px;">
                                                    <button class="btn btn-success btn-block btnAddPerm">Add</button>
                                                    <button class="btn btn-danger btn-block btnRemovePerm">Remove</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned Roles</label>
                                            <select class="form-control destList" asp-for="@Model.Role" asp-items="@Model.AssignedRoles" id="assignedRoles" name="assignedRoles" multiple></select>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (isUserCompanyAdmin)
                            {
                                <hr>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Available Companies</label>
                                            <select class="form-control fromList" asp-for="@Model.Company" , asp-items="@Model.AvaliableComps" id="availableComps"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <div class="control-group">
                                                <div style="margin-top: 24px;">
                                                    <button class="btn btn-success btn-block btnAddPerm" id="btnAddComp">Add </button>
                                                    <button class="btn btn-danger btn-block btnRemovePerm">Remove </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned Companies</label>
                                            <select class="form-control destList" asp-for="@Model.Company" , asp-items="@Model.AssignedComps" id="assignedComps"></select>
                                        </div>
                                    </div>
                                </div>

                            }

                            @if (isUserOfficeAdmin)
                            {
                                <hr>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Available OfficeKeys</label>
                                            <select class="form-control fromList" asp-for="@Model.OfficeKeys" , asp-items="@Model.AvaliableOffices" id="avaliableOffices" multiple></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <div class="control-group">
                                                <div style="margin-top: 24px;">
                                                    <button class="btn btn-success btn-block btnAddPerm" id="btnAddOffice">Add</button>
                                                    <button class="btn btn-danger btn-block btnRemovePerm">Remove </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned OfficeKeys</label>
                                            <select class="form-control destList" asp-for="@Model.OfficeKeys" , asp-items="@Model.AssignedOffices" id="assignedOffices" multiple></select>
                                        </div>
                                    </div>
                                </div>
                            }


                            @if (isUserClinicAdmin || isUserApp)
                            {
                                <hr>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned Clinics</label>
                                            <select class="form-control fromList" asp-for="@Model.Clinics" , asp-items="@Model.AvailableClinics" id="availableClinics" multiple></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <div class="control-group">
                                                <div style="margin-top: 24px;">
                                                    <button class="btn btn-success btn-block btnAddPerm" id="btnAddClinic">Add</button>
                                                    <button class="btn btn-danger btn-block btnRemovePerm">Remove</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label">Assigned Clinic</label>
                                            <select class="form-control destList" asp-for="@Model.Clinics" , asp-items="@Model.AssignedClinics" id="assignedClinics" multiple></select>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group pull-right">
                                        <div style="margin-top: 24px;">
                                            <button class="btn btn-primary" id="saveUserPerm">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>