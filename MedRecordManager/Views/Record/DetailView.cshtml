@model MedRecordManager.Models.DailyRecord.DetailRecord
@{
    ViewData["Title"] = "Detail Record View";
}

@{ 
    var tabId = "detail" + Model.VisitId;
}

<div class="tab-pane" id="@tabId">

    <div class="row">
        <div class="col-md-12">
            <div id="Results">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Patient # @Model.PaitentInfo.PvNumber</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="control-label">First Name</label>
                                    <input asp-for="PaitentInfo.FirstName" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Middle Name</label>
                                    <input asp-for="PaitentInfo.MidName" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.MidName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Last Name</label>
                                    <input asp-for="PaitentInfo.LastName" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">SSN</label>
                                    <input asp-for="PaitentInfo.SSN" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.SSN" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Address Line 1</label>
                                    <input asp-for="PaitentInfo.Address.Address1" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.Address1" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Address Line 2</label>
                                    <input asp-for="PaitentInfo.Address.Address2" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.Address2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">City</label>
                                    <input asp-for="PaitentInfo.Address.City" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">State</label>
                                    <input asp-for="PaitentInfo.Address.State" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.State" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Zip</label>
                                    <input asp-for="PaitentInfo.Address.Zip" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.Zip" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Home Phone</label>
                                    <input asp-for="PaitentInfo.HomePhone" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Address.Address1" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Cell Phone</label>
                                    <input asp-for="PaitentInfo.CellPhone" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.CellPhone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label class="control-label">Email</label>
                                    <input asp-for="PaitentInfo.Email" class="form-control" />
                                    <span asp-validation-for="PaitentInfo.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group pull-right">
                                    <div style="margin-top: 24px;">
                                        <button class="btn btn-primary" id="btnPatient">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @if (Model.GuarantorInfo != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div id="Results">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">Guarantor # @Model.GuarantorInfo.PayerNum</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="control-label">First Name</label>
                                        <input asp-for="GuarantorInfo.FirstName" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Middle Name</label>
                                        <input asp-for="GuarantorInfo.MidName" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.MidName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Last Name</label>
                                        <input asp-for="GuarantorInfo.LastName" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Relationship</label>
