                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Address Line 2</label>
                                        <input asp-for="GuarantorInfo.Address.Address2" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.Address.Address2" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">City</label>
                                        <input asp-for="GuarantorInfo.Address.City" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.Address.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">State</label>
                                        <input asp-for="GuarantorInfo.Address.State" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.Address.State" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Zip</label>
                                        <input asp-for="GuarantorInfo.Address.Zip" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.Address.Zip" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Phone</label>
                                        <input asp-for="GuarantorInfo.Phone" class="form-control" />
                                        <span asp-validation-for="GuarantorInfo.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class=" pull-right">
                                      <button class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    @if (Model.InsuranceInfo != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div id="Results">
                    <div class="box box-comment">
                        <div class="box-header with-border">
                            <h3 class="box-title">Insurance</h3>
                        </div>
                        <div class="box-body">
                            @foreach (var item in Model.InsuranceInfo)
                            {
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Primary Name</label>
                                            <input asp-for="@item.InsuranceName" class="form-control" />
                                            <span asp-validation-for="@item.InsuranceName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Phone Number</label>
                                            <input asp-for="@item.Phone" class="form-control" />
                                            <span asp-validation-for="@item.Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Address Line 1</label>
                                            <input asp-for="@item.Address.Address1" class="form-control" />
                                            <span asp-validation-for="@item.Address.Address1" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Addres Line 2</label>
                                            <input asp-for="@item.Address.Address2" class="form-control" />
                                            <span asp-validation-for="@item.Address.Address2" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">City</label>
                                            <input asp-for="@item.Address.City" class="form-control" />
                                            <span asp-validation-for="@item.Address.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">State</label>
                                            <input asp-for="@item.Address.State" class="form-control" />
                                            <span asp-validation-for="@item.Address.State" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Zip</label>
                                            <input asp-for="@item.Address.Zip" class="form-control" />
                                            <span asp-validation-for="@item.Address.Zip" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="control-label">Advanced MD Code</label>
                                            <input asp-for="@item.AmdCode" class="form-control" />
                                            <span asp-validation-for="@item.AmdCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="pull-right">                                         
                                          <button class="btn btn-primary" id="btnPatient">Save</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    @if (Model.ChartInfo != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div id="chart">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Chart</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Discahrged By</label>
                                        <input asp-for="ChartInfo.DiscahrgedBy" class="form-control" disabled />

                                    </div>
                                </div>
                                <div class="col-lg-3 ">
                                    <div class="form-group">
                                        <label class="control-label">Discahrged By</label>
                                        <input asp-for="ChartInfo.DischargedDate" class="form-control" disabled />

                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="control-label">Discahrged By</label>
                                        <input asp-for="ChartInfo.SignoffBy" class="form-control" disabled />

                                    </div>
                                </div>
                                <div class="col-lg-3 ">
                                    <div class="form-group">
                                        <label class="control-label">Discahrged By</label>
                                        <input asp-for="ChartInfo.SignoffBy" class="form-control" disabled />

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @if (Model.ChartInfo.ChartDocs.Any())
                                {
                                    @foreach (var doc in Model.ChartInfo.ChartDocs)
                                    {
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">File Name</label>
                                                <a href=""><span>@doc.FileName</span></a>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">File Type</label>
                                                <span>@doc.FileType</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">Last Updated By</label>
                                                <span>@doc.LastUpdatedby</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">Last Updated On</label>
                                                <span>@doc.LastUpdatedOn</span>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>                          
                            <div class="row">
                                    <div class="col-lg-12">
                                        @Html.HiddenFor(model => model.ChartId)
                                        <div class="pull-right">
                                            <label class="btn btn-primary" for="my-file-selector">
                                                <input id="my-file-selector" type="file" style="display:none"
                                                       onchange="$('#upload-file-info').html(this.files[0].name)">
                                                Upload
                                            </label>
                                            <span class='label label-info' id="upload-file-info"></span>
                                        </div>
                                       
                                    </div>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }



    @if (Model.PatientDoc.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div id="doc">
                    <div class="box box-default">
                        <div class="box-header with-border">
                            <h3 class="box-title">Document</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                @if (Model.PatientDoc.Any())
                                {
                                    @foreach (var doc in Model.PatientDoc)
                                    {
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">File Name</label>
                                                <a href=""><span>@doc.FileName</span></a>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">File Type</label>
                                                <span>@doc.Type</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">Last Verified By</label>
                                                <span>@doc.LastVerifiedBy</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label">Last Verified On</label>
                                                <span>@doc.LastVeryfiedOn</span>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="pull-right">
                                        <label class="btn btn-primary" for="my-file-selector">
                                            <input id="my-file-selector" type="file" style="display:none"
                                                   onchange="$('#upload-file-info').html(this.files[0].name)">
                                            Upload
                                        </label>
                                        <span class='label label-info' id="upload-file-info"></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>



