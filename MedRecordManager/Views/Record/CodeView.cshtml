@model CodeChartVm

@section scripts{
    <script type="text/javascript">
        var procCodeGrid;
        var IcdCodeGrid;
        var id = $("#codeVisitId").val()

        $(document).ready(function (){
            ProcCodeGrid = $('#procCodeTable').grid({
                primaryKey: 'char',
                params: { visitId: id},
                dataSource: '/Record/GetProcCode',
                autoGenerateColumns: true,
                pager: { limit: 10, sizes: [2, 5, 10, 20] },
            });

            ProcCodeGrid = $('#IcdCodeTable').grid({
                primaryKey: 'char',
                params: { visitId: id},
                dataSource: '/Record/GetIcdCode',
                autoGenerateColumns: true,
                pager: { limit: 10, sizes: [2, 5, 10, 20] },
            });

        });
        
    </script>
}


    <div class="row">
        @Html.HiddenFor(x => x.VisitId, new { id = "codeVisitId" })
        <div class="col-sm-12">
            <ul class="pager">
                <li class="previous"><a href="#">Previous</a></li>
                <li class="next"><a href="#">Next</a></li>
            </ul>
        </div>
    </div>
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading"> Patient Chart</div>
            <div class="panel-body">
                <div id="image-gallery-3" class="cf">
                    <img src="assets/images/image_viewer/1.jpg" data-high-res-src="assets/images/image_viewer/1_big.jpg" alt="" class="pannable-image">
                    <img src="assets/images/image_viewer/2.jpg" data-high-res-src="assets/images/image_viewer/2_big.jpg" alt="" class="pannable-image">
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">Code Records</div>
            <div class="panel-body">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">ProcCode Records</h3>
                    </div>
                    <div class="box-body">
                        <table id="procCodeTable" class="table table-striped"></table>
                    </div>
                </div>

                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">IcdCode Records</h3>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="IcdCodeTable" class="table table-striped"></table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>