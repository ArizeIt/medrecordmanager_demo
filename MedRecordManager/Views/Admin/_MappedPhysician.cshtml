@model IEnumerable<MedRecordManager.Models.PhysicianVm>

<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">PV Physican Id</label>
            </th>
            <th>
                <label class="control-label">Physican First Name</label>
            </th>
            <th>
                <label class="control-label">Physican Last Name</label>
            </th>

            <th>
                <label class="control-label">Amd Provider Name</label>
            </th>
            <th>
                <label class="control-label">Amd Provider Code</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pvPhysicianId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pvFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pvLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmdDisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmdProviderCode)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })*@
                <button class="btn btn-link" id="addPhysician" onclick="editPhysician()">Edit</button>|

                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                <button class="btn btn-link" id="addPhysician" onclick="deletePhysician()">Delete</button>|
                <button class="btn btn-link" id="addPhysician" onclick="addPhysician()">Create</button>
            </td>
        </tr>
            }
        }
        else
        {
           <tr><td>No Physisian has been found. | <button class="btn btn-link" id="addPhysician" onclick="addPhysician()">Create</button></td></tr>

        }
    </tbody>
</table>
