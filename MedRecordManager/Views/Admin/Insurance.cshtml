
@section scripts{ 

    <script type="text/javascript">
     $(document).ready( function(){
        grid=$('#insTable').grid({
                   primaryKey: 'InsuranceId',
                    
                    dataSource: '/admin/getInsurance',
                    columns: [
                     { filed: 'insuranceId', hidden: true },
                     { field: 'primaryName',  title: 'Insurance Name'},
                     { field: 'primaryPhone',title: 'Primary Phone' },
                     { field: 'primaryAddress1',title: 'Address Line 1' },               
                     { field: 'primaryAddress2', title: 'Address Line 2' },
                     { field: 'primaryCity', title: 'City' },
                     { field: 'primaryState',  title: 'State', priority: 3 },
                     { field: 'primaryZip',title: 'Zip' },
                     { field: 'amdCode', title: 'Amd Carrior Code' },
                     
                    ],  
                    pager: { limit: 10, sizes: [2, 5, 10, 20] },    
            });

         $('#btnSearch').on('click', function () {
                grid.reload({ page: 1, insName: $('#txtName').val() });
           });
         $('#btnClear').on('click', function () {
                $('#txtName').val('');              
                grid.reload({insName:''});
            });

        });

      
    </script>
   

}

<div class="row top-buffer">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Insurance Mapping</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-8">
                    <div class="form-group row">
                        <div class="col-lg-4">
                            <input id="txtName" type="text" placeholder="Insurance Name..." class="form-control">
                        </div>

                        <div class="col-sm-1">
                            <button id="btnSearch" type="button" class="btn btn-primary">Search</button>
                        </div>
                        <div class="col-sm-3">
                            <button id="btnClear" type="button" class="btn btn-success">Clear</button>
                        </div>
                    </div>
                    
                </div>
                <div class="col-lg-4">
                  
                </div>
                <div class="col-lg-4">
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#diaAdd">
                        Add New
                    </button>
                </div>
            </div>
            
            <div class="row">
                <table cellpadding="0" cellspacing="0" border="0" class="dataTable table table-striped" id="insTable"></table>
            </div>           
        </div>
    </div>
</div>

